<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>Archetype Created Web Application</display-name>

  <resource-ref>
    <description>DataSource</description>
    <res-ref-name>jdbc/homelibrary</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

  <servlet>
    <servlet-name>com.hillel.hw20.servlets.FindActorsForFilmServlet</servlet-name>
    <servlet-class>com.hillel.hw20.servlets.FindActorsForFilmServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>com.hillel.hw20.servlets.FindActorsForNFilmsServlet</servlet-name>
    <servlet-class>com.hillel.hw20.servlets.FindActorsForNFilmsServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>com.hillel.hw20.servlets.FindFilmsForCurrentAndPreviousYearServlet</servlet-name>
    <servlet-class>com.hillel.hw20.servlets.FindFilmsForCurrentAndPreviousYearServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>com.hillel.hw20.servlets.FindActorsAsDirectorServlet</servlet-name>
    <servlet-class>com.hillel.hw20.servlets.FindActorsAsDirectorServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>com.hillel.hw20.servlets.DeleteFilmsOlderGivenYearsServlet</servlet-name>
    <servlet-class>com.hillel.hw20.servlets.DeleteFilmsOlderGivenYearsServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>com.hillel.hw20.servlets.LoginServlet</servlet-name>
    <servlet-class>com.hillel.hw20.servlets.LoginServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>com.hillel.hw20.servlets.LogoutServlet</servlet-name>
    <servlet-class>com.hillel.hw20.servlets.LogoutServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>com.hillel.hw20.servlets.FindActorsForFilmServlet</servlet-name>
    <url-pattern>/findActorsForFilm</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>com.hillel.hw20.servlets.FindActorsForNFilmsServlet</servlet-name>
    <url-pattern>/findActorsForNFilm</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>com.hillel.hw20.servlets.FindFilmsForCurrentAndPreviousYearServlet</servlet-name>
    <url-pattern>/findFilmsForCurrentAndPreviousYear</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>com.hillel.hw20.servlets.FindActorsAsDirectorServlet</servlet-name>
    <url-pattern>/findActorsAsDirector</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>com.hillel.hw20.servlets.DeleteFilmsOlderGivenYearsServlet</servlet-name>
    <url-pattern>/deleteFilmsOlderGivenYears</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>com.hillel.hw20.servlets.LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>com.hillel.hw20.servlets.LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

</web-app>

